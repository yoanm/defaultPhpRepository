{
  "name": "yoanm/XXX",
  "type": "project",
  "authors": [
    {
      "name": "yoanm",
      "email": "yoanm@users.noreply.github.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "squizlabs/php_codesniffer": "2.*",
    "behat/behat": "~3.0"
  },
  "autoload": {
    "psr-0": {
      "Yoanm\\XXX": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Technical\\": "tests/Technical",
      "Functional\\": "tests/Functional",
      "Functional\\Yoanm\\XXX\\Context\\": "features/bootstrap"
    }
  },
  "scripts": {
    "test": [
      "@t-test",
      "@f-test"
    ],
    "f-test": [
      "./vendor/bin/phpunit --colors=auto --testsuite functional",
      "./vendor/bin/behat --no-snippets --strict --colors --format progress"
    ],
    "t-test": [
      "./vendor/bin/phpunit --colors=auto --testsuite technical"
    ],
    "cs": [
      "./vendor/bin/phpcs"
    ],
    "cs-checkstyle": [
       "./vendor/bin/phpcs --report=checkstyle"
    ],
    "coverage-clover": [
      "./vendor/bin/phpunit --coverage-clover coverage/clover.xml"
    ],
    "coverage": [
      "./vendor/bin/phpunit --coverage-html coverage"
    ]
  }
}
